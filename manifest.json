{

  "manifest_version": 2,
  "name": "Useful Twitch Tags",
  "version": "1.0",
  "description": "Block/Search multiple tags on twitch",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://gql.twitch.tv/gql",
    "*://www.twitch.tv/"
  ],

  "browser_action": {
    "default_icon": {
      "16": "logo/logo16.png"
    },
    "default_title": "usefulTT settings",
    "default_popup": "popup/settings.html"
  },

  "background": {
    "scripts": ["usefulTT.js"]
  },

  "browser_specific_settings": {
  "gecko": {
    "id": "usefultt14039876634096@example.com",
    "strict_min_version": "58.0"
  }
}
}
